<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

    <TextView
        android:id="@+id/SourceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="BBC News"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:textColor="#A2790d"
        />



    <ImageView
        android:id="@+id/SourceImage"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:scaleType="centerCrop"
       android:src="@drawable/background"
       android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/SourceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jacinda Ardern, Hero to Liberals Abroad, Is Validated at Home - The New York Times"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textColor="#16085b"/>

    <TextView
        android:id="@+id/SourceDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="2020-10-17T08:14:00Z"
        android:gravity="start"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:textColor="#222323"
        />
        <TextView
            android:id="@+id/SourceDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="@string/descrip_one"
            android:layout_marginTop="3dp"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            android:textColor="#222323"
            android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/weburl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:visibility="gone"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:textColor="#222323"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/imgurl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:visibility="gone"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:textColor="#222323"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/SourceAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Author:Damien Cave"
        android:gravity="start"
       android:layout_marginLeft="10dp"
        android:textColor="#222323"
        android:textSize="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="View Full Coverage"
        android:padding="5dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corners"
        android:textColor="@color/Gold"
        android:textSize="10sp"/>
    </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>